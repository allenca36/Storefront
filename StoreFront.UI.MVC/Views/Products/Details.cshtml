@model StoreFront.DATA.EF.Product

@{
    ViewBag.Title = $"{Model.ProductName}";
}

<h2>@ViewBag.Title</h2>

<div class="col-md-6">    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitsSold)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitsSold)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductImage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductImage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductType1.ProductTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductType1.ProductTypeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status.StatusName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>

    </dl>
    @using (Html.BeginForm("AddToCart", "Products", new { @productName = Model.ProductID}, FormMethod.Post, new { @class = "text-center" }))
    {
        @Html.HiddenFor(x => x.ProductID)
        @Html.TextBox("Qty", 1, new { @class="form-control", @type="number", @style="max-width: 75px; display:inline;"})
        <input type="submit" class="btn btn-primary" value="Add to Cart" name="qty" />
    }
</div>
<div class="col-md-6">
    <img src="~/Content/imgstore/products/@Model.ProductImage" alt="Product Image" title="@Model.ProductName" />
</div>
<p>
    @if (User.IsInRole("Admin")) {
        @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID })
    }
    @Html.ActionLink("Back to List", "Index")
</p>
