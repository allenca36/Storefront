                                @*<li><a href="@Url.Action("Index", "Roles")">Employee Roles</a></li>

                            </ul>*@
                        </li>
                        <li class="nav-item">
                            @if (Session["cart"] != null && ((Dictionary<int, StoreFront.UI.MVC.Models.CartItemViewModel>)Session["cart"]).Count > 0)
                            {
                                <a class="dropdown-item" href="/ShoppingCart/Index">
                                    Cart <i class="fa fa-shopping-cart"></i>
                                </a>
                            }
                            else
                            {
                                @Html.ActionLink("Cart", "Index", "ShoppingCart")
                            }
                        </li>
                    }
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

    <!--BLUE WRAP-->
    <div id="blue">
        <div class="container">
            <div class="row">
                <h3>@ViewBag.Title</h3>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /blue -->

    @RenderBody()

    <!--FOOTER-->
