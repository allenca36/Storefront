            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav menu">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Products")">Store</a></li>
                    <li><a href="@Url.Action("About","Home")">About</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li>
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Account</a>
                        <div class="dropdown-menu account-dropdown" style="background-color: lightgray;">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </li>
                   @* @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">PAGES <b class="caret"></b></a>
                            <ul class="dropdown-menu">

                                <li><a href="@Url.Action("Index", "ProductTypes")">ProductType</a></li>
                                @*<li><a href="@Url.Action("Index", "Status")">Status</a></li>
                                <li><a href="@Url.Action("Index", "SubTypes")">SubType</a></li>
                                @*<li><a href="@Url.Action("Index", "Departments")">Departments</a></li>
